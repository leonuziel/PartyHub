{
    "metadata": {
        "gameId": "new-component-test",
        "title": "New Component Test",
        "description": "A test bed for all the new generic UI components.",
        "minPlayers": 1,
        "maxPlayers": 8
    },
    "gameData": {
        "players": [
            {
                "id": "1",
                "nickname": "Alice",
                "score": 100,
                "avatar": "/avatars/avatar1.png",
                "stats": {
                    "Wins": 5,
                    "Losses": 2
                },
                "status": "Ready"
            },
            {
                "id": "2",
                "nickname": "Bob",
                "score": 80,
                "avatar": "/avatars/avatar2.png",
                "stats": {
                    "Wins": 3,
                    "Losses": 4
                },
                "status": "Answered"
            }
        ],
        "choices": [
            {
                "id": "A",
                "label": "Choice A"
            },
            {
                "id": "B",
                "label": "Choice B"
            },
            {
                "id": "C",
                "label": "Choice C"
            }
        ],
        "gameCards": [
            {
                "id": "c1",
                "content": "First Card",
                "faceUp": true
            },
            {
                "id": "c2",
                "content": "Second Card",
                "faceUp": false
            },
            {
                "id": "c3",
                "content": "Third Card",
                "faceUp": true
            }
        ],
        "diceValues": [
            4,
            6
        ]
    },
    "initialGameState": {},
    "playerAttributes": {
        "showModal": false
    },
    "actions": {
        "showModal": [
            {
                "function": "setProperty",
                "args": [
                    "playerAttributes.{{actorId}}.showModal",
                    true
                ]
            }
        ],
        "hideModal": [
            {
                "function": "setProperty",
                "args": [
                    "playerAttributes.{{actorId}}.showModal",
                    false
                ]
            }
        ]
    },
    "initialState": "START",
    "states": {
        "START": {
            "onEnter": [
                {
                    "function": "startTimer",
                    "args": [
                        3,
                        {
                            "function": "dispatchEvent",
                            "args": [
                                "timerExpires"
                            ]
                        }
                    ]
                }
            ]
        },
        "GAME_TOOLS": {}
    },
    "events": {
        "timerExpires": {
            "permissions": [
                "server"
            ]
        }
    },
    "transitions": [
        {
            "from": "START",
            "to": "GAME_TOOLS",
            "event": "timerExpires"
        }
    ],
    "ui": {
        "START": {
            "host": {
                "components": [
                    {
                        "component": "Container",
                        "layout": {
                            "width": "100%",
                            "height": "100%",
                            "padding": {
                                "top": 16,
                                "left": 16,
                                "right": 16,
                                "bottom": 16
                            }
                        },
                        "props": {
                            "children": [
                                {
                                    "component": "TextDisplay",
                                    "props": {
                                        "text": "Component Showcase",
                                        "fontSize": "2rem"
                                    },
                                    "layout": {
                                        "alignment": "TopCenter"
                                    }
                                },
                                {
                                    "component": "Grid",
                                    "layout": {
                                        "padding": {
                                            "top": 16,
                                            "bottom": 16
                                        }
                                    },
                                    "props": {
                                        "columns": 2,
                                        "spacing": 16,
                                        "children": [
                                            {
                                                "component": "ImageDisplay",
                                                "props": {
                                                    "src": "/game-art/quizclash.png",
                                                    "alt": "QuizClash"
                                                }
                                            },
                                            {
                                                "component": "Stack",
                                                "props": {
                                                    "direction": "vertical",
                                                    "spacing": 8,
                                                    "children": [
                                                        {
                                                            "component": "TextDisplay",
                                                            "props": {
                                                                "text": "Player 1 Stats:"
                                                            }
                                                        },
                                                        {
                                                            "component": "KeyValueDisplay",
                                                            "props": {
                                                                "data": "{{gameData.players[0].stats}}"
                                                            }
                                                        },
                                                        {
                                                            "component": "Timer",
                                                            "props": {
                                                                "duration": 60,
                                                                "type": "progress"
                                                            }
                                                        },
                                                        {
                                                            "component": "Spinner",
                                                            "props": {}
                                                        },
                                                        {
                                                            "component": "Spacer",
                                                            "props": {}
                                                        }
                                                    ]
                                                }
                                            }
                                        ]
                                    }
                                },
                                {
                                    "component": "TextDisplay",
                                    "props": {
                                        "text": "Player List:"
                                    }
                                },
                                {
                                    "component": "ListDisplay",
                                    "props": {
                                        "items": "{{gameData.players}}",
                                        "renderItem": {
                                            "component": "Stack",
                                            "props": {
                                                "direction": "horizontal",
                                                "spacing": 16,
                                                "style": {
                                                    "alignItems": "center"
                                                },
                                                "children": [
                                                    {
                                                        "component": "PlayerAvatar",
                                                        "props": {
                                                            "player": "{{item}}"
                                                        }
                                                    },
                                                    {
                                                        "component": "StateIndicator",
                                                        "props": {
                                                            "status": "{{item.status}}"
                                                        }
                                                    },
                                                    {
                                                        "component": "TextDisplay",
                                                        "props": {
                                                            "text": "{{item.nickname}} - Score: {{item.score}}"
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                },
                                {
                                    "component": "Button",
                                    "props": {
                                        "text": "Next Page",
                                        "onClick": "nextState"
                                    },
                                    "layout": {
                                        "alignment": "BottomCenter"
                                    }
                                }
                            ]
                        }
                    }
                ]
            },
            "player": {
                "components": [
                    {
                        "component": "Stack",
                        "layout": {
                            "padding": {
                                "top": 16,
                                "left": 16,
                                "right": 16,
                                "bottom": 16
                            }
                        },
                        "props": {
                            "direction": "vertical",
                            "spacing": 16,
                            "children": [
                                {
                                    "component": "TextInput",
                                    "props": {
                                        "placeholder": "Enter your name",
                                        "maxLength": 20,
                                        "showCounter": true
                                    }
                                },
                                {
                                    "component": "Slider",
                                    "props": {
                                        "min": 0,
                                        "max": 100,
                                        "defaultValue": 50
                                    }
                                },
                                {
                                    "component": "ChoiceSelector",
                                    "props": {
                                        "options": "{{gameData.choices}}",
                                        "selectionMode": "multiple"
                                    }
                                },
                                {
                                    "component": "Button",
                                    "props": {
                                        "text": "Show Modal",
                                        "onClick": "showModal"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "component": "Modal",
                        "props": {
                            "isOpen": "{{player.showModal}}",
                            "children": [
                                {
                                    "component": "Stack",
                                    "props": {
                                        "direction": "vertical",
                                        "spacing": 16,
                                        "style": {
                                            "padding": "24px",
                                            "backgroundColor": "#1C192B",
                                            "borderRadius": "8px"
                                        },
                                        "children": [
                                            {
                                                "component": "TextDisplay",
                                                "props": {
                                                    "text": "This is a modal!"
                                                }
                                            },
                                            {
                                                "component": "Button",
                                                "props": {
                                                    "text": "Close",
                                                    "onClick": "hideModal"
                                                }
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "GAME_TOOLS": {
            "host": {
                "components": [
                    {
                        "component": "Stack",
                        "props": {
                            "direction": "vertical",
                            "spacing": 24,
                            "style": {
                                "padding": "24px",
                                "alignItems": "center"
                            },
                            "children": [
                                {
                                    "component": "TextDisplay",
                                    "props": {
                                        "text": "Game Tools Showcase",
                                        "fontSize": "2rem"
                                    }
                                },
                                {
                                    "component": "CardContainer",
                                    "props": {
                                        "layout": "fan",
                                        "cards": "{{gameData.gameCards}}"
                                    }
                                },
                                {
                                    "component": "Dice",
                                    "props": {
                                        "values": "{{gameData.diceValues}}"
                                    }
                                },
                                {
                                    "component": "GameBoard",
                                    "props": {
                                        "size": {
                                            "rows": 4,
                                            "cols": 4
                                        },
                                        "children": [
                                            {
                                                "component": "GamePiece",
                                                "props": {
                                                    "color": "blue",
                                                    "position": {
                                                        "row": 0,
                                                        "col": 0
                                                    }
                                                }
                                            },
                                            {
                                                "component": "GamePiece",
                                                "props": {
                                                    "image": "/avatars/avatar3.png",
                                                    "position": {
                                                        "row": 3,
                                                        "col": 3
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            },
            "player": {
                "components": [
                    {
                        "component": "TextDisplay",
                        "props": {
                            "text": "Look at the host screen!",
                            "layout": {
                                "alignment": "Center"
                            }
                        }
                    }
                ]
            }
        }
    }
}
